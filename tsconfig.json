{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ESNext",
    "esModuleInterop": true,

    "module": "amd",
    "moduleResolution": "node", // REQUIRED for AMD + outFile

    "jsx": "react-jsx",
    "allowJs": true,

    "moduleDetection": "legacy", // must not be “force” with AMD
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,
    "declaration": true
  }
}
