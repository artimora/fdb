{
    "name": "fdb",
    "version": "1.0.0",
    "private": false,
    "workspaces": [
        "src/packages/**",
        "src/apps/**",
        "src/tests/**"
    ],
    "dependencies": {
        "typescript": "^5.9.3"
    },
    "devDependencies": {
        "@biomejs/biome": "2.3.0",
        "bunup": "^0.16.10"
    },
    "scripts": {
        "build:packages": "bunup  --exports",
        "dev:packages": "bunup --exports --watch",
        "dev:fdb:api": "bun --bun run --watch src/apps/fdb-api-testing/src/index.ts",
        "dev:fdb:testing": "bun--bun run --watch src/apps/fdb-testing/src/index.ts",
        "test": "bun test --randomize --concurrent",
        "test:simple": "bun test",
        "test:excessive": "bun test --randomize --concurrent --rerun-each 32"
    },
    "prettier": {
        "singleQuote": false,
        "tabWidth": 4,
        "useTabs": true,
        "trailingComma": "none",
        "semi": true,
        "jsxSingleQuote": false
    }
}