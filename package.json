{
  "name": "fdb",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "src/packages/**",
    "src/apps/**"
  ],
  "packageManager": "bun@1.21.1",
  "devEngines": {
    "packageManager": {
      "name": "bun",
      "version": "1.21.1"
    },
    "runtime": {
      "name": "bun",
      "version": "1.21.1"
    }
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.0"
  },
  "scripts": {
    // we do this here instead of in the testing projects package.json because buns monorepo can only watch files in the same directory on windows
    "dev": "bun run --bun --watch src/apps/testing/src/index.ts"
  }
}